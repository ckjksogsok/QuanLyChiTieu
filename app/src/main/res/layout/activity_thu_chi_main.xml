<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:padding="8sp"
    android:background="#15c49b"
    tools:context="com.example.trongnhan.assignmentps04601.ThuChiMainActivity"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_weight="0.64">
        <TableLayout
            android:id="@+id/tbl"
            android:padding="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/thuchitable_background">
            <TableRow
                android:layout_marginBottom="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:src="@drawable/money2" />
                <TextView
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền Mặt"
                    android:gravity="left"
                    android:paddingTop="13sp"
                    android:layout_marginLeft="20sp"
                    android:layout_weight="0.2"
                    />
                <TextView
                    android:id="@+id/TvTienMat"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="1.0"
                    android:gravity="right"
                    />

            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#BBBBBB"
                />
            <TableRow
                android:layout_marginTop="3sp"
                android:layout_marginBottom="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:src="@drawable/money1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền Tiết Kiệm"
                    android:gravity="left"
                    android:layout_marginLeft="20sp"
                    android:textColor="#000"
                    android:paddingTop="13sp"
                    android:layout_weight="0.2"
                    />
                <TextView
                    android:id="@+id/TvTietKiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="1.0"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:gravity="right"
                    />

            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#BBBBBB"
                />
            <TableRow
                android:layout_marginTop="3sp"
                android:layout_marginBottom="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:src="@drawable/money3" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thẻ Tín Dụng"
                    android:gravity="left"
                    android:textColor="#000"
                    android:layout_marginLeft="20sp"
                    android:paddingTop="13sp"
                    android:layout_weight="0.2"
                    />
                <TextView
                    android:id="@+id/TvTinDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="0"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:gravity="right"
                    />

            </TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="#BBBBBB"
                />
            <TableRow
                android:layout_marginTop="3sp"
                android:layout_marginBottom="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:src="@drawable/money4" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số Dư"
                    android:textColor="#000"
                    android:gravity="left"
                    android:layout_marginLeft="20sp"
                    android:paddingTop="13sp"
                    android:layout_weight="0.2"
                    />
                <TextView
                    android:id="@+id/tvSoDu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="0"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:gravity="right"
                    />

            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/imgadd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#075b57"
            android:background="#26efc1"
            android:padding="10dp"
            android:text="Thêm Giao Dịch" />


        <Button
            android:id="@+id/imgweek"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#14efe4"
            android:background="#646464"
            android:padding="10dp"
            android:text="Lịch Sử" />

        <Button
            android:id="@+id/quit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#ffbabf"
            android:background="#c91818"
            android:padding="10dp"
            android:text="Thoát" />



    </LinearLayout>

</LinearLayout>
